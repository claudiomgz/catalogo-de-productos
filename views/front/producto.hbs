
<!DOCTYPE html>
<html lang="en">
    <head>
        {{> head}}
    </head>
    <body>
        {{> nav}}
        <section class="single-product">
            {{#if data}}
            <div class="container mt-5">
                <div class="row">
                    <div class="col-md-5">
                        <img src='/uploads/{{data.imagen}}' alt='{{data.nombre}}' class="img-fluid" />
                    </div>
                    <div class="col-md-7">
                        <div class="single-product-details">
                            <h2>{{data.nombre}}</h2>
                            <p class="product-price">
                                {{dolarApeso data.precio}}
                            </p>

                            <p class="mt-2">
                                {{data.descripcion}}
                            </p>

                            {{#list data.caracteristicas}}
                                <li>{{this}}</li>
                            {{/list}}

                            <a href="mailto:comprar@comprar.com?subject=interes en el producto {{data.nombre}} ID: {{data.id}}" class="btn btn-info mt-20">Comprar</a>
                        </div>
                    </div>
                </div>
            </div>
            {{else}}
                <p class="text-danger">El producto no existe.</p>
            {{/if}}
        </section>
        {{> footer}}
    </body>
</html>